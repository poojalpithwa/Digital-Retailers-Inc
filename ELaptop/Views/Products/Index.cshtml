@model IEnumerable<ELaptop.Models.Product>

@{
    ViewBag.Title = "Manage Laptops";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <b>Product Name</b>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPU)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RAM)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Storage)
        </th>
        <th>
            Product Image
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Product_name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Category)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CPU)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.RAM) GB
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Storage) GB
    </td>
    <td>
        <img src="@Url.Content(item.ImagePath)" width="100" height="100" />
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Product_id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Product_id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Product_id })
    </td>
</tr>
}

</table>
